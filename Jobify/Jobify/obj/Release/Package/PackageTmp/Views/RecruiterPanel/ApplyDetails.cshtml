@model IEnumerable<Jobify.Models.JobApply>

@{
    ViewBag.Title = "ApplyDetails";
}

<div class="container" style="margin-top:7%;">
    <h2>ApplyDetails</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplyAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Why_Should_we_hire_you_)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Whats_your_dream_job_)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Job.JobType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resume.Experience)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplyAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Why_Should_we_hire_you_)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Whats_your_dream_job_)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.JobType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resume.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resume.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resume.Dob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resume.Experience)
                </td>
                <td>
                    @Html.ActionLink("Resume Info", "ResumeInfo", new { id = item.ResumeId }) |
                    @Html.ActionLink("Change Status", "ChangeStatus", new { id = item.Id }) | 
                    @Html.ActionLink("Delete Apply", "DeleteApply", new { id = item.Id })

                    

                </td>
            </tr>
        }

    </table>
    </div>