@model Jobify.Models.JobApply

@{
    ViewBag.Title = "AppyJob";
}
<div class="container" style="margin-top:7%;">
    <h2>AppyJob</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>JobApply</h4>
            <hr />
            <h3 style="color:red;">@ViewBag.msg</h3>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       @{ Model.ApplyAt = DateTime.Now;}
        @Html.HiddenFor(m=>m.ApplyAt)
            <div class="form-group">
                @Html.LabelFor(model => model.Why_Should_we_hire_you_, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Why_Should_we_hire_you_, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Why_Should_we_hire_you_, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Whats_your_dream_job_, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Whats_your_dream_job_, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Whats_your_dream_job_, "", new { @class = "text-danger" })
                </div>
            </div>
            
        @{
            Model.ResumeId = ViewBag.resumeId;
            Model.JobId = ViewBag.jobId;
            Model.JobStatus = "Panding";
        }
            @Html.HiddenFor(m=>m.JobStatus)
        @Html.HiddenFor(m => m.ResumeId)
        @Html.HiddenFor(m => m.JobId)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
            }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
