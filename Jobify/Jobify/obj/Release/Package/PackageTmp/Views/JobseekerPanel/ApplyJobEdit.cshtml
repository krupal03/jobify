@model Jobify.Models.JobApply

@{
    ViewBag.Title = "ApplyJobEdit";
}
<div class="container" style="margin-top:7%;">
    <h2>ApplyJobEdit</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>JobApply</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            @Html.HiddenFor(m=>m.ApplyAt)
            <div class="form-group">
                Why should we hired you?
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Why_Should_we_hire_you_, new { htmlAttributes = new { @class = "form-control" ,required="required"} })
                    @Html.ValidationMessageFor(model => model.Why_Should_we_hire_you_, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                Whats your dream job?
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Whats_your_dream_job_, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.Whats_your_dream_job_, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(m => m.ResumeId)
            @Html.HiddenFor(m => m.JobId)

            @Html.HiddenFor(m => m.JobStatus)


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
