@model IEnumerable<Jobify.Models.Job>

@{
    ViewBag.Title = "AllJob";
}
<div class="container" style="margin-top:7%;">
    <h2>AllJob</h2>

    <table id="datatable" >
        <thead>
            <tr>
               
                <th><h1>Apply Job</h1></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                   

                    <td class="bg-light">
                          <div class="col-md-12 ftco-animate">
                            <div class="job-post-item py-4 d-block d-lg-flex align-items-center">
                                <div class="one-third mb-4 mb-md-0">
                                    <div class="job-post-item-header d-flex align-items-center">
                                        <h2 class="mr-3 text-black"><a href="#">@Html.DisplayFor(modelItem => item.JobTitle)</a></h2>
                                        <div class="badge-wrap">
                                            @if (item.JobType=="Full-Time") {
                                            <span class="bg-primary text-white badge py-2 px-3">@Html.DisplayFor(modelItem => item.JobType)</span>
                                            }
                                            else if (item.JobType == "Part-Time")
                                            {
                                                <span class="bg-secondary text-white badge py-2 px-3">Part-Time</span>
                                            }
                                            else if(item.JobType == "Internship")
                                            {
                                                <span class="bg-info text-white badge py-2 px-3">Internship</span>
                                            }
                                            else
                                            {
                                                <span class="bg-warning text-white badge py-2 px-3">Freeclance</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="job-post-item-body d-block d-md-flex">
                                        <div class="mr-3"><span class="icon-layers"></span> <a href="#"> @Html.DisplayFor(modelItem => item.Recruiter.Name).</a></div>
                                        <div><span class="icon-my_location"></span> <span>@Html.DisplayFor(modelItem => item.JobLocation)</span></div>
                                        
                                    </div>
                                    <div class="job-post-item-body d-block d-md-flex">
                                        <div class="mr-3"><span class="icon-rupee"></span> <a href="#"> @Html.DisplayFor(modelItem => item.Salary).</a></div>
                                        <div><span class="icon-description"></span> <span>@Html.DisplayFor(modelItem => item.Description)</span></div>

                                    </div>
                                </div>
                                <div class="one-forth ml-auto d-flex align-items-center mt-4 md-md-0">
                                    <div>
                                        <a href="#" class="icon text-center d-flex justify-content-center align-items-center icon mr-2">
                                            <span class="icon-heart"></span>
                                        </a>
                                    </div>
                                        @Html.ActionLink("Apply", "AppyJob", new { id = item.Id })
                                    

                                </div>
                            </div>
                        </div><!-- end -->

                    </td>
                </tr>
            }
        </tbody>
    </table>
    @section Scripts{
        <script>
          $(document).ready(function () { $('#datatable').DataTable(); });
        </script>
    }
</div>

