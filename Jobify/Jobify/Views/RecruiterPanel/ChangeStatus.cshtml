@model Jobify.Models.JobApply

@{
    ViewBag.Title = "ChangeStatus";
}

<div class="container" style="margin-top:7%;">
    <h2>ChangeStatus</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>JobApply</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.Id)

            @Html.HiddenFor(m => m.ApplyAt)

            @Html.HiddenFor(m => m.ResumeId)

            @Html.HiddenFor(m => m.JobId)

            @Html.HiddenFor(m => m.Why_Should_we_hire_you_)

            @Html.HiddenFor(m => m.Whats_your_dream_job_)

            <div class="form-group">
                @Html.LabelFor(model => model.JobStatus, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <select class="form-control" name="JobStatus">
                        <option value="Interview">Interview</option>
                        <option value="Panding">Panding</option>
                        <option value="Done">Done</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
